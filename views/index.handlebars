<div class="container">
  <div class="jumbotron">
    <h1 class="text-center"><strong>Eat Da Burger App</strong></h1>
  </div>

  <div class="row">
    <div class="col-md-6 main-header">
      <h2 class="text-center"><strong>Burgers Not Eaten!</strong></h2>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  {{this.id}}. {{this.burger_name}}  
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit">Devour it now!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>      
    </div>
    <div class="col-md-6 main-header">
      <h2 class="text-center"><strong>Burgers Devoured!</strong></h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <h2 class="text-center"><strong>Add Custom Burger</strong></h2>
    <div class="col-md-4 main-header">
    </div>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
        <input type="hidden" name="devoured" value="false">
        <button type="submit">Add Burger</button>
      </div>
    </form>
  </div>
</div>
<footer class="footer">
  <div class="container">
      <p><a href="/api/burgers">Burgers List</a> | <a href="https://github.com/ngbricen/burger">GitHub Repo</a></p>
  </div>
</footer>